@{
    Layout = "_Layout";
}

@using Factory.Models

@if (Model.Count == 0)
{
    <h3>No engineers have been added!</h3>
}

<ul class ="list-group">
    @foreach (Engineer engineer in Model)
    {
        <li class="list-group-item">@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
    }
</ul>
<hr>
<a href='@Url.Action("Create")'>
    <button type="button">Add new Engineer</button>
</a>
